@page
@model SharpSeer.Pages.Cohorts.Cohort_PageModel
@{
}
<h1>Cohort Page</h1>
<form method="get">
	<button class="btn" type="submit" name="Action" value="create">
		Tilføj
	</button>
	@if (Model.ShowCreate)
	{
		<iframe src="/Cohorts/Create" width="100%" height="80"></iframe>
	} else
	{
		
	}
	
</form>

<table class ="table">
	<thead>
		<tr>
			<th scope="col">
				Navn
			</th>
			<th scope="col">
				Retning
			</th>
			<th scope="col">
				Semester
			</th>
			<th scope="col">

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cohort in Model.Cohorts)
		{
			<tr>
				<td>
					@cohort.Name
				</td>
				<td>
					@cohort.Major
				</td>
				<td>
					@cohort.Term
				</td>
				<td>
					<a asp-page="/Cohorts/Update" asp-route-id="@cohort.Id" class="btn btn-primary">
						Opdater
                    </a>
                    <a asp-page="/Cohorts/Delete" asp-route-id="@cohort.Id" class="btn btn-danger">Slet</a>
				</td>
			</tr>
		}
	</tbody>
</table> 
