@page
@model SharpSeer.Pages.Cohorts.Cohort_PageModel
@{
}
<h1>Cohort Page</h1>
<form method="get">
	<a asp-page="/Cohorts/Create" class="btn btn-primary" type="submit" name="Action" value="create">
		Tilføj
	</a>
	@* @if (Model.ShowCreate)
	{
		<iframe src="" width="100%" height="80"></iframe>
	} else
	{
		
	} *@
	
</form>
Filter





<table class ="table">
	<thead>
		<tr>
			<th scope="col">
				<input type="text" class="form-control" 
					   onchange="this.form.submit()" width="100" placeholder="Hold navn" style="margin-bottom:5px"/>
				Navn
			</th>
			<th scope="col">
				<input type="text" class="form-control"
					   onchange="this.form.submit()" width="100" placeholder="Retning" style="margin-bottom:5px" />
				Retning
			</th>
			<th scope="col">
				<input type="text" class="form-control"
					   onchange="this.form.submit()" width="100" placeholder="Semester" style="margin-bottom:5px"/>
				Semester
			</th>
			<th scope="col">
				
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cohort in Model.Cohorts)
		{
			<tr>
				<td>
					@cohort.Name
				</td>
				<td>
					@cohort.Major
				</td>
				<td>
					@cohort.Term
				</td>
				<td>
					<a asp-page="/Cohorts/Update" asp-route-id="@cohort.Id" class="btn btn-primary">
						Opdater
                    </a>
                    <a asp-page="/Cohorts/Delete" asp-route-id="@cohort.Id" class="btn btn-danger">Slet</a>
				</td>
			</tr>
		}
	</tbody>
</table> 



<!-- Modal -->
@if (Model.ShowDelete)
{
	<!-- Modal -->
	<div style="display: block;" class="modal" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">Er du sikker på du vil slette dette hold?</h4>
					<a href="/Cohorts/Cohort_Page" type="button" class="btn btn-close"></a>
				</div>
				<!-- Modal body -->
				<div class="modal-body">
					@Model.Cohort.Name
				</div>
				<!-- Modal footer -->
				<div class="modal-footer">
					<form method="post">
						<button type="submit" class="btn btn-danger">Ja</button>
					</form>
					<a href="/Cohorts/Cohort_Page" type="button" class="btn btn-primary">Nej</a>
				</div>
			</div>
		</div>
	</div>
}
@if (Model.ShowCreate)
{
	<!-- Modal -->
	<div style="display: block;" class="modal" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">Tilføj nyt hold</h4>
					<a href="/Cohorts/Cohort_Page" type="button" class="btn btn-close"></a>
				</div>
				<!-- Modal body -->
				<form asp-action="SubmitForm" asp-controller="Home" method="post">
					<div class="modal-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">
										Navn
									</th>
									<th scope="col">
										Eksamens type
									</th>
									<th scope="col">
										Med vagt
									</th>
									<th scope="col">
										Ekstern censor
									</th>
									<th scope="col">
										Eksamens start
									</th>
									<th scope="col">
										Eksamens Slut
									</th>
									<th scope="col">
										Deadline for aflevering
									</th>
									<th scope="col">
										Eksmaens varighed
									</th>
								</tr>
							</thead>
							<tbody>

								<tr>
									<td>
										<input asp-for="Exam.Name" class="form-control" />
									</td>
									<td>
										<input asp-for="Exam.ExamType" class="form-control" />
									</td>
									<td>
										<input type="checkbox" asp-for="Exam.IsGuarded" />
									</td>
									<td>
										<input type="checkbox" asp-for="Exam.NeedExternalExaminer" />
									</td>
									<td>
										<input asp-for="Exam.FirstExamDate" class="form-control" />
									</td>
									<td>
										<input asp-for="Exam.LastExamDate" class="form-control" />
									</td>
									<td>
										<input asp-for="Exam.HandInDeadline" class="form-control" />
									</td>
									<td>
										<input asp-for="Exam.DurationInMinutes" class="form-control" />
									</td>
								</tr>

						</table>
					</div>
					<!-- Modal footer -->
					<div class="modal-footer">

						<button type="submit" class="btn btn-primary">Godkend</button>
						<a href="/Exams/Exam_Page" type="button" class="btn btn-danger">Annuller</a>
					</div>
				</form>
			</div>
		</div>
	</div>
}







@section Scripts
{
	<script>
		$(document).ready(function () {
			$("#myModal").modal({backdrop: "static"});
			$("#myModal").modal("show");
		});)
	</script>
}