@page 
@using SharpSeer.Models
@model SharpSeer.Pages.Teachers.Teacher_PageModel
@{
}
<h2>Lærer oversigt</h2>

<a class="btn btn-primary" href="/Teachers/Teacher_Page/?Create=0">Tilføj</a>


<form method="get" class="search-form">
	<table class="table table-search">
		<thead>
			<tr>
				<th><input type="text" class="form-control" asp-for="Name" placeholder="Navn" /></th>
				<th><input type="text" class="form-control" asp-for="NameId" placeholder="Initialer" /></th>
				<th><input type="text" class="form-control" asp-for="Email" placeholder="E-mail" /></th>
				<th><input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon nummer" /></th>
				<th>
					<select asp-for="IsExternal" class="form-select">
						<option value="">Alle</option>
						<option value="true">Ja</option>
						<option value="false">Nej</option>
					</select>
				</th>
				<th>
					<button type="submit" class="btn btn-primary">Søg</button>
				</th>
			</tr>
		</thead>
	</table>
</form>


<table class="table table-showup">
	<thead>
		<tr>
			<th>Navn</th>
			<th>Initialer</th>
			<th>E-mail</th>
			<th>Telefon nummer</th>
			<th>Er censor?</th>
			  <th></th>
			  <th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var teacher in Model.Teachers)
		{
			<tr>
				<td>@teacher.Name</td>
				<td>@teacher.NameId</td>
				<td>@teacher.Email</td>
				<td>@teacher.PhoneNumber</td>
				<td>@(teacher.IsExternal == true ? "Ja" : teacher.IsExternal == false ? "Nej" : "")</td>
				<td><a href="/Teachers/Teacher_Page/?Update=@teacher.Id" class="btn btn-primary">Opdater</a></td>
				<td><a href="/Teachers/Teacher_Page/?Delete=@teacher.Id" class="btn btn-danger">Slet</a></td>
			</tr>
		}
	</tbody>
</table>


@if (Model.ShowDelete)
{
	
	<!-- Modal -->
	<div style="display: block;" class="modal" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">Er du sikker på du vil slette denne Lærer</h4>
					<a href="/Teachers/Teacher_Page" type="button" class="btn btn-close"></a>
				</div>
				<!-- Modal body -->
				<div class="modal-body">
					@Model.Teacher.Name
				</div>
				<!-- Modal footer -->
				<div class="modal-footer">
					<form method="post" asp-route-id="@Model.Teacher.Id" asp-page-handler="Delete">
						<button type="submit" class="btn btn-danger">Ja</button>
					</form>
					<a href="/Teachers/Teacher_Page" type="button" class="btn btn-primary">Nej</a>
				</div>
			</div>
		</div>
	</div>
}

@if (Model.ShowCreate)
{
	<!-- Modal -->
	<div style="display: block;" class="modal" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">Tilføj ny lærer</h4>
					<a href="/Teachers/Teacher_Page" type="button" class="btn btn-close"></a>
				</div>
				<!-- Modal body -->
				<form method="post" asp-page-handler="Create">
					<div class="modal-body">
						<table class="table">
							<tbody>
								<tr>
									<th scope="col">
										Navn
									</th>
									<td>
										<input asp-for="Teacher.Name" class="form-control" required />
									</td>
								</tr>
								<tr>
									<th scope="col">
										Navne kode
									</th>
									<td>
										<input asp-for="Teacher.NameId" class="form-control" required />
									</td>
								</tr>
								<tr>
									<th scope="col">
										E-Mail
									</th>
									<td>
										<input asp-for="Teacher.Email" class="form-control" required />
									</td>
								</tr>
								<tr>
									<th scope="col">
										Telefon nummer
									</th>
									<td>
										<input asp-for="Teacher.PhoneNumber" class="form-control" required />
									</td>
								<tr>
									<th scope="col">
										Extern censor
									</th>
									<td>
										<select asp-for="Teacher.IsExternal" class="form-select">
											<option value="false">Nej</option>
											<option value="true">Ja</option>
										</select>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<!-- Modal footer -->
					<div class="modal-footer">

						<button type="submit" class="btn btn-primary">Godkend</button>
						<a href="/Teachers/Teacher_Page" type="button" class="btn btn-danger">Annuller</a>
					</div>
				</form>
			</div>
		</div>
	</div>
}

@if (Model.ShowUpdate)
{
	<!-- Modal -->
	<div style="display: block;" class="modal" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">Opdater hold</h4>
					<a href="/Teachers/Teacher_Page" type="button" class="btn btn-close"></a>
				</div>
				<!-- Modal body -->
				<form method="post" asp-route-id="@Model.Teacher.Id" asp-page-handler="Update">
					<div class="modal-body">
						<table class="table">
							<tbody>
								<tr>
									<th scope="col">
										Navn
									</th>
									<td>
										<input asp-for="Teacher.Name" class="form-control" />
									</td>
								</tr>
								<tr>
									<th scope="col">
										Navne kode
									</th>
									<td>
										<input asp-for="Teacher.NameId" class="form-control" />
									</td>
								</tr>	
								<tr>
									<th scope="col">
										E-Mail
									</th>
									<td>
										<input asp-for="Teacher.Email" class="form-control" />
									</td>
								</tr>
								<tr>
									<th scope="col">
										Telefon nummer
									</th>
									<td>
										<input asp-for="Teacher.PhoneNumber" class="form-control" />
									</td>
								</tr>
								<tr>
									<th scope="col">
										Extern censor
									</th>
									<td>
										<select asp-for="Teacher.IsExternal" class="form-select">
											<option value="false">Nej</option>
											<option value="true">Ja</option>
										</select>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<!-- Modal footer -->
					<div class="modal-footer">
						<button type="submit" class="btn btn-primary">Opdater</button>
						<a href="/Teachers/Teacher_Page" type="button" class="btn btn-danger">Annuller</a>
					</div>
				</form>
			</div>
		</div>
	</div>
}
<body class="background">
</body>





@section Scripts
{
	<script>
		$(document).ready(function () {
			$("#myModal").modal({backdrop: "static"});
			$("#myModal").modal("show");
		});)
	</script>
}