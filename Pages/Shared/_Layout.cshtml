<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SharpSeer</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SharpSeer.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3"
             style="background-color: #305030;">
            <div class="container">
                <a class="navbar-brand" style="color:#ffff;" asp-area="" asp-page="/Index">SharpSeer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:#ffff;" asp-area="" asp-page="/Index">Hjem</a>
                        </li>
                        <li class="nav-item">
							<a class="nav-link" style="color:#ffff" asp-area="" asp-page="/Cohorts/Cohort_Page">Hold</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#ffff" asp-area="" asp-page="/Exams/Exam_Page">Eksamner</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#ffff" asp-area="" asp-page="/Teachers/Teacher_Page">Lærer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#ffff" asp-area="" asp-page="/Calendar/CalendarView">Calender</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#ffff" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    @{
						var roleCookie = Context.Request.Cookies["IsTeacher"];
                    }
                    <form method="post" asp-page="/RoleSelector" class="d-flex align-items-center" >
						@Html.AntiForgeryToken()
                        <label class="me-2 mb-0 text-white">Rolle</label>
                        <select name="IsTeacher" class="form-select-sm me-2" style="width:120px;">
                            @if (string.IsNullOrEmpty(roleCookie))
                                {
                                <option value="" selected="@(string.IsNullOrEmpty(roleCookie) ? "selected" : null)">vælg...</option>
                                }
                             <option value="false" selected="@(roleCookie == "false" ? "selected" : null)">Elev</option>
							 <option value="true" selected="@(roleCookie == "true" ? "selected" : null)">Lærer</option>
                        </select>
                        <button type="submit" class="btn btn-outline-light btn-sm">Gem</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted"
   
        <div class="container">
            <a asp-area="" style="color:#ffff" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
